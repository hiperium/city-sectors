<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <conversionRule conversionWord="clr" converterClass="org.springframework.boot.logging.logback.ColorConverter" />
    <conversionRule conversionWord="wEx" converterClass="org.springframework.boot.logging.logback.ExtendedWhitespaceThrowableProxyConverter" />

    <springProperty scope="context" name="timezone" source="logging.hiperium.timezone" />
    <springProperty scope="context" name="useCompactMode" source="logging.hiperium.useCompactMode" />
    <springProperty scope="context" name="useFormattedTimestamps" source="logging.hiperium.useFormattedTimestamps" />

    <appender name="textAppender" class="ch.qos.logback.core.ConsoleAppender">
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>TRACE</level>
        </filter>
        <charset>UTF-8</charset>
        <encoder>
            <pattern>
                %clr(%d{yyyy-MM-dd'T'HH:mm:ss'Z'XXX}){faint} %clr(%5p) %clr(-){faint} %clr(%-35.35logger{34}){cyan} %clr(:){faint} %m%n%wEx
            </pattern>
        </encoder>
    </appender>

    <appender name="jsonAppender" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.core.encoder.LayoutWrappingEncoder">
            <layout class="hiperium.cities.commons.loggers.HiperiumLoggerLayout">
                <timezone>${timezone}</timezone>
                <useCompactMode>${useCompactMode}</useCompactMode>
                <useFormattedTimestamps>${useFormattedTimestamps}</useFormattedTimestamps>
            </layout>
        </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="textAppender"/>
    </root>

    <springProfile name="local">
        <logger name="org.springframework.boot.docker.compose" level="DEBUG" />
        <logger name="hiperium.cities.commons.loggers.HiperiumLoggerLayout" level="INFO" additivity="false" />
    </springProfile>

    <springProfile name="local | dev | qa">
        <logger name="hiperium.city.read.function" level="DEBUG" additivity="false">
            <appender-ref ref="jsonAppender"/>
        </logger>
        <logger name="io.awspring.cloud" level="DEBUG" />
        <logger name="org.springframework.cloud.function.adapter.aws" level="DEBUG" />
    </springProfile>

    <springProfile name="load | preview | prod">
        <logger name="hiperium.city.read.function" level="INFO" additivity="false">
            <appender-ref ref="jsonAppender"/>
        </logger>
    </springProfile>
</configuration>
